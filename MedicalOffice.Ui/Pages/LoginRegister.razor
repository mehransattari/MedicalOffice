@page "/login"
@page "/register"

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">

                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="assets/img/login-banner.png" class="img-fluid" alt="Doccure Register">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>ثبت نام مراجع <a href="doctor-register.html">پزشک هستید؟</a></h3>
                            </div>

                            <form action="https://template.doccure.io/html/vetinary-rtl/doctor-dashboard.html">
                                <div class="form-group form-focus">
                                    <input type="text" class="form-control floating">
                                    <label class="focus-label">نام</label>
                                </div>
                                <div class="form-group form-focus">
                                    <input type="text" class="form-control floating">
                                    <label class="focus-label">شماره موبایل </label>
                                </div>
                                <div class="form-group form-focus">
                                    <input type="password" class="form-control floating">
                                    <label class="focus-label">ساخت رمزعبور </label>
                                </div>
                                <div class="terms-and-policy pt-2 pb-2">
                                    <input type="checkbox" required name="checkbox" value="check"
                                           id="agree" /><span class="agree">
                                        موافقت با <span class="terms">
                                            <a href="term-condition.html" target="_blank">قوانین استفاده </a> و
                                            <a href="privacy-policy.html" target="_blank">
                                                حریم
                                                شخصی
                                            </a>
                                        </span>
                                    </span>
                                </div>
                                <div class="text-end">
                                    <a class="forgot-link" href="login.html">اکانت دارید؟</a>
                                </div>
                                <button class="btn btn-primary w-100 btn-lg login-btn"
                                        type="submit">
                                    ثبت‌نام
                                </button>
                                <div class="login-or">
                                    <span class="or-line"></span>
                                    <span class="span-or">یا</span>
                                </div>
                                <div class="row form-row social-login">
                                    <div class="col-6">
                                        <a href="#" class="btn btn-facebook w-100">
                                            <i class="fab fa-facebook-f me-1"></i> ورود
                                        </a>
                                    </div>
                                    <div class="col-6">
                                        <a href="#" class="btn btn-google w-100">
                                            <i class="fab fa-google me-1"></i> ورود
                                        </a>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
