@page "/detailservice/{id:long}"
@inherits DetailsServiceBase


<div class="breadcrumb-bar">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-12 col-12">
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">خانه</a></li>
                    </ol>
                </nav>
                <h2 class="breadcrumb-title">‌ 
                    @ProvidingService.Title
                </h2>
            </div>
        </div>
    </div>
</div>


<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="blog-view">
                    <div class="blog blog-single-post">
                        <div class="blog-image">
                            <a href="javascript:void(0);">
                                <img alt="@ProvidingService.Title" src="@ProvidingService.Image"
                                     class="img-fluid">
                            </a>
                        </div>
                        <h3 class="blog-title">@ProvidingService.Title </h3>
                        <div class="blog-content">

                            @((MarkupString)ProvidingService.Desc)

                        </div>
                    </div>
            
                </div>
            </div>

           

        </div>
    </div>
</div>