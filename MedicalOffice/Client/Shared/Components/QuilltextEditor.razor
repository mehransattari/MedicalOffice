    <EditorContent>
        @((MarkupString)editorContent)
    </EditorContent>
</BlazoredTextEditor>
<MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Success" OnClick="ChangeText" Style="text-align:center">
    اعمال تغییرات
</MudButton>












