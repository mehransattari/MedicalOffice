@inherits FormDialogContactUsBase

<EditForm Model="@ContactUs" OnValidSubmit="OnValidSubmit">  
    <MudDialog>
        <DialogContent>
            <DataAnnotationsValidator />

            <MudGrid>

                <MudItem xs="6" sm="6">
                    <MudTextField T="string" Label="عنوان " Required="true" For="@(() => ContactUs.Title)"
                    @bind-Value="ContactUs.Title" />
                </MudItem>

                <MudItem xs="6" sm="6">
                    <MudTextField T="string" Label="موبایل " Required="true" For="@(() => ContactUs.Mobile)"
                    @bind-Value="ContactUs.Mobile" />
                </MudItem>

                <MudItem xs="6" sm="6">
                    <MudTextField T="string" Label="تلفن " Required="true" For="@(() => ContactUs.PhoneNumber)"
                    @bind-Value="ContactUs.PhoneNumber" />
                </MudItem>

                <MudItem xs="6" sm="6">
                    <MudTextField T="string" Label="ادرس اول " Required="true" For="@(() => ContactUs.Address1)"
                    @bind-Value="ContactUs.Address1" />
                </MudItem>

                <MudItem xs="6" sm="6">
                    <MudTextField T="string" Label="ادرس دوم " Required="true" For="@(() => ContactUs.Address2)"
                    @bind-Value="ContactUs.Address2" />
                </MudItem>

                <MudItem xs="12" sm="12">
                    <QuilltextEditor OnValueChanged="TextHandleValueChanged" ReceiveText="@Text" />
                </MudItem>

                <MudItem xs="12" sm="12">
                    <FileUpload OnValueChanged="FileHandleValueChanged" />
                </MudItem>

                @if (!string.IsNullOrEmpty(ContactUs.ImageUrl))
                {
                    <MudItem xs="12" sm="12">
                        <MudImage Src="@ContactUs.ImageUrl" Alt="@ContactUs.Title" Elevation="25" Width="100" Class="rounded-lg" />
                    </MudItem>
                }
              

            </MudGrid>

        </DialogContent>

        <DialogActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true">                     
                ذخیره
            </MudButton>
            <MudButton OnClick="Cancel" Color="Color.Error" Variant="Variant.Filled">لغو</MudButton>
        </DialogActions>

    </MudDialog>
</EditForm>




