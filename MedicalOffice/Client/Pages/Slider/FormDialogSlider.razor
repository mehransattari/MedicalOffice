@inherits FormDialogSliderBase


<EditForm Model="@Slider" OnValidSubmit="OnValidSubmit">

    <MudDialog>

        <DialogContent>

            <DataAnnotationsValidator />

            <MudGrid>

                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="عنوان " Required="true" For="@(() => Slider.Title)"
                    @bind-Value="Slider.Title" />
                </MudItem>

                <MudItem xs="12" sm="12">
                    <FileUpload OnValueChanged="FileHandleValueChanged" />
                </MudItem>

                <MudItem xs="12" sm="12">

                    @if (!string.IsNullOrEmpty(Slider.ImageUrl))
                    {
                        <MudImage Src="@Slider.ImageUrl" Alt="@Slider.Title" Elevation="25" Width="100" Class="rounded-lg" />
                    }

                </MudItem>

                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="توضیحات " Lines="5" Required="true" For="@(() => Slider.Desc)"
                    @bind-Value="Slider.Desc" />
                </MudItem>

                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="ویژگی 1 " Required="true" For="@(() => Slider.Property1)"
                    @bind-Value="Slider.Property1" />
                </MudItem>

                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="توضیحات  1" Lines="5" Required="true" For="@(() => Slider.ShortDesc1)"
                    @bind-Value="Slider.ShortDesc1" />
                </MudItem>

                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="ویژگی 2 " Required="true" For="@(() => Slider.Property2)"
                    @bind-Value="Slider.Property2" />
                </MudItem>

                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="توضیحات 2" Lines="5" Required="true" For="@(() => Slider.ShortDesc2)"
                    @bind-Value="Slider.ShortDesc2" />
                </MudItem>

                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="ویژگی 3 " Required="true" For="@(() => Slider.Property3)"
                    @bind-Value="Slider.Property3" />
                </MudItem>


                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="توضیحات 3" Lines="5" Required="true" For="@(() => Slider.ShortDesc3)"
                    @bind-Value="Slider.ShortDesc3" />
                </MudItem>
            </MudGrid>


        </DialogContent>

        <DialogActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary"
                       DisableElevation="true">
                ذخیره
            </MudButton>
            <MudButton OnClick="Cancel" Color="Color.Error" Variant="Variant.Filled">لغو</MudButton>
        </DialogActions>

    </MudDialog>
</EditForm>