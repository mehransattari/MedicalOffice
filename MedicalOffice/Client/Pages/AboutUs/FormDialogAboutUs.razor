@inherits FormDialogAboutUsBase
<EditForm Model="@AboutUs" OnValidSubmit="OnValidSubmit">

    <MudDialog >


        <DialogContent>

            <DataAnnotationsValidator />

            <MudGrid>

                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="عنوان " Required="true" For="@(() => AboutUs.Title)"
                    @bind-Value="AboutUs.Title" />
                </MudItem>


                <MudItem xs="12" sm="12">
                    <MudTextField T="string" Label="توضیح  " Lines="3" Required="true" For="@(() => AboutUs.Text)"
                    @bind-Value="AboutUs.Text" />
                </MudItem>
              

                <MudItem xs="12" sm="12">
                    <FileUpload OnValueChanged="FileHandleValueChanged" />   
                </MudItem>

                <MudItem xs="12" sm="12">

                    @if (!string.IsNullOrEmpty(AboutUs.ImageUrl))
                    {
                        <MudImage Src="@AboutUs.ImageUrl" Alt="@AboutUs.Title" Elevation="25" Width="100" Class="rounded-lg" />
                    }

                </MudItem>
                <MudSpacer />

            </MudGrid>


        </DialogContent>

        <DialogActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary"
                       DisableElevation="true">
                ذخیره
            </MudButton>
            <MudButton OnClick="Cancel" Color="Color.Error" Variant="Variant.Filled">لغو</MudButton>
        </DialogActions>

    </MudDialog>
</EditForm>




